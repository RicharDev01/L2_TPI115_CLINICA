<IfModule mod_rewrite.c>
RewriteEngine On

# Para que los archivos estáticos no se vean afectados
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Establezco mi punto de entrada y la nomenclatura que voy a usar
RewriteRule ^([a-zA-Z0-9_-]+)/([a-zA-Z0-9_-]+)/?$ index.php?controller=$1&action=$2 [L,QSA]

# Defino la regla de petición
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /index\.php\ HTTP/
RewriteRule ^index\.php$ / [R=301,L]

# Página de error personalizada
ErrorDocument 404 /Errors/not_found
</IfModule>
